;;; Model for the maze
;;;

;; Determine if there is a path from our current position to the visual-location on our left.
(p determine-path-left
    =goal>
        state determine-path
    =visual>
        - left nil
        left =left
        screen-pos =previous-pos
        id =previous-id
        screen-x =current-x
        screen-y =current-y
    =visual-location>
        screen-y =current-y
        < screen-x =current-x
    =imaginal>
        finish =finish
        finish-x =finish-x
        finish-y =finish-y
        target =target
        target-id =target-id
==>
    =goal>
        state move-attention
        previous determine-path
    +imaginal>
        finish =finish
        finish-x =finish-x
        finish-y =finish-y
        target =target
        target-id =target-id
        chosen-id =left
        chosen-direction left
        previous-pos =previous-pos
        previous-id =previous-id
    =visual>
        left-attended true
    -visual>
    =visual-location>
)

