(p check-path-left
    =goal>
        state check-path
    =imaginal>
        chosen-id =id
        previous-id =previous
        chosen-direction left
    =visual>
        id =id
==>
    =goal>
        state move
    +action>
        cmd move
        direction left
    =imaginal>
    =visual>
        origin =previous
        right-attended true
        origin-dir right
)

